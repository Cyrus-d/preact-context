  },
  "homepage": "https://github.com/valotas/preact-context",
  "peerDependencies": {
    "preact": "^8.2.7"
  },
  "keywords": [
    "preact",
    "context"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/jsdom": "^11.0.4",
    "@types/mocha": "^2.2.48",
    "@types/sinon": "^4.3.0",
    "@types/sinon-chai": "^2.7.29",
